<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/devicespage"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            >  
            <android.support.design.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/abc_ic_ab_back_material"
                app:backgroundTint="@android:color/transparent"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/buttonCancelDeviceSelect"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_list"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/abc_text_size_title_material"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ListView
          android:id="@+id/list_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
     ></ListView>
    
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/padding_20"
            android:layout_marginVertical="@dimen/padding_10"
        >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/progress"
                android:layout_centerVertical="true"
                android:id="@+id/progressBar1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/scanning"
                android:textSize="@dimen/text_size"
                android:gravity="center"
                android:layout_toRightOf="@+id/progressBar1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_10"
            />
    </RelativeLayout>
</LinearLayout>
