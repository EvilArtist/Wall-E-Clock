<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/homepage"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    
     <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        android:layout_marginBottom="@dimen/padding_20"
        card_view:cardPreventCornerOverlap="false"
        >
        <RelativeLayout 
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background"
            android:padding="@dimen/padding_20">
            <TextClock
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pressatart2p_regular"
                android:textAlignment="center"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:textColor="@color/colorAccent"
                android:format24Hour="HH:mm:ss"
                android:text="12:00:00"
                android:id="@+id/clockView"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22/12/2020"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:id="@+id/calendarView"
                android:layout_below="@+id/clockView"/>
            <HorizontalScrollView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calendarView"
                android:layout_centerInParent="true"
                android:scrollbars="none"
                android:layout_margin="@dimen/padding_20"
                android:id="@+id/scrollview1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockColor"
                >
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_20"
        android:padding="@dimen/padding_20"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        android:background="@drawable/abc_btn_colored_material"
        card_view:cardPreventCornerOverlap="false"
        android:id="@+id/materialCardViewNightMode">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5"
            android:background="@drawable/gradient_background_secondary"
           >
            <Button
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:background="@drawable/rounded_image"
                android:drawableStart="@drawable/baseline_nights_stay_24"
                android:id="@+id/nightModeIcon"
                >
            </Button>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/night_setting"
                android:layout_toRightOf="@+id/nightModeIcon"
                android:layout_marginLeft="@dimen/padding_10"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/nightSettingLabel"
                android:textFontWeight="700"
                />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/night_setting"
                android:layout_below="@+id/nightSettingLabel"
                android:layout_toRightOf="@+id/nightModeIcon"
                android:layout_marginLeft="@dimen/padding_10"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:textFontWeight="700"
                android:id="@+id/nightmode_infor"
                android:layout_marginTop="@dimen/padding_5"
                />
        </RelativeLayout>
      
    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_5"
        android:padding="@dimen/padding_20"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        android:background="@drawable/abc_btn_colored_material"
        card_view:cardPreventCornerOverlap="false"
        android:id="@+id/materialCardViewEffect">
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5"
            android:background="@drawable/gradient_background_secondary"
           >
            <Button
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:background="@drawable/rounded_image"
                android:drawableStart="@drawable/baseline_movie_filter_24"
                android:id="@+id/effectIcon"
                >
            </Button>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/effect_setting"
                android:layout_toRightOf="@+id/effectIcon"
                android:layout_marginLeft="@dimen/padding_10"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/effectSettingLabel"
                android:textFontWeight="700"
                />
            <android.support.design.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/effectSettingLabel"
                android:layout_toRightOf="@+id/effectIcon"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/simple_effect"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_10"
                android:clickable="true"
                android:id="@+id/chipSimpleEffect"/>
            
            <android.support.design.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/effectSettingLabel"
                android:layout_toRightOf="@+id/chipSimpleEffect"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/random_effect"
                android:id="@+id/chipFullEffect"
                android:clickable="true"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_10"/>
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>


    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_5"
        android:padding="@dimen/padding_20"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        android:background="@drawable/abc_btn_colored_material"
        card_view:cardPreventCornerOverlap="false"
        android:id="@+id/materialCardViewMessage">
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5"
            android:background="@drawable/gradient_background_secondary"
           >
            <Button
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:background="@drawable/rounded_image"
                android:drawableStart="@drawable/baseline_event_note_24"
                android:id="@+id/messageIcon"
                >
            </Button>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/message_setting"
                android:layout_toRightOf="@+id/messageIcon"
                android:layout_marginLeft="@dimen/padding_10"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/messageLabel"
                android:textFontWeight="700"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/messageIcon"
                android:layout_below="@+id/messageLabel"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_5"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:textFontWeight="700"
                android:text="@string/event_example"
                android:id="@+id/messageInfo"
                />
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
</LinearLayout>
