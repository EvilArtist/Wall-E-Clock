<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/message_setting"
    
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            >  
            <android.support.design.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/abc_ic_ab_back_material"
                app:backgroundTint="@android:color/transparent"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/buttonCancelMessage"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/message_setting"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/abc_text_size_title_material"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/solar_newyear"
        android:id="@+id/switch_solar_newyear"
        android:enabled="true"
        android:checked="true"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginHorizontal="@dimen/padding_20"
                />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_20"
        android:text="@string/solar_newyear"
        android:id="@+id/solar_newyear_message"/>
    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lunar_newyear"
        android:id="@+id/switch_lunar_newyear"
        android:enabled="true"
        android:checked="true"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginHorizontal="@dimen/padding_20"
                />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_20"
        android:text="@string/lunar_newyear"
        android:id="@+id/lunar_newyear_message"/>

    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/xmas"
        android:id="@+id/switch_xmas"
        android:enabled="true"
        android:checked="true"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginHorizontal="@dimen/padding_20"
                />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_20"
        android:text="@string/xmas"
        android:id="@+id/xmas_message"/>

    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/daily"
        android:id="@+id/switch_daily"
        android:enabled="true"
        android:checked="true"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginHorizontal="@dimen/padding_20"
                />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_20"
        android:text="@string/daily_example"
        android:id="@+id/daily_message"
        android:textColor="@android:color/holo_green_dark"/>
   
</LinearLayout>
